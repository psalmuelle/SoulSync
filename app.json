{
  "expo": {
    "name": "SoulSync",
    "slug": "SoulSync",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/adaptive-icon.png",
    "scheme": "soulsync",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "icon": {
        "dark": "./assets/icons/icon-dark.png",
        "light": "./assets/icons/icon-light.png",
        "tinted": "./assets/icons/icon-tinted.png"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "monochromeImage": "./assets/icons/adaptive-icon.png",
        "backgroundColor": "#fafafa"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.erinlesamuel.SoulSync"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/splash-icon-dark.png",
          "imageWidth": 100,
          "resizeMode": "contain",
          "backgroundColor": "#fbefe7"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            {
              "fontFamily": "DMSans",
              "fontDefinitions": [
                {
                  "path": "./assets/fonts/dm-sans/DMSans-Regular.ttf",
                  "weight": 400,
                  "style": "normal"
                },
                {
                  "path": "./assets/fonts/dm-sans/DMSans-Medium.ttf",
                  "weight": 500,
                  "style": "normal"
                },
                {
                  "path": "./assets/fonts/dm-sans/DMSans-Bold.ttf",
                  "weight": 700,
                  "style": "normal"
                },
                {
                  "path": "./assets/fonts/dm-sans/DMSans-Italic.ttf",
                  "weight": 400,
                  "style": "italic"
                },
                {
                  "path": "./assets/fonts/dm-sans/DMSans-MediumItalic.ttf",
                  "weight": 500,
                  "style": "italic"
                },
                {
                  "path": "./assets/fonts/dm-sans/DMSans-BoldItalic.ttf",
                  "weight": 700,
                  "style": "italic"
                }
              ]
            },
            {
              "fontFamily": "Recoleta",
              "fontDefinitions": [
                {
                  "path": "./assets/fonts/recoleta/Recoleta Regular.otf",
                  "weight": 400,
                  "style": "normal"
                },
                {
                  "path": "./assets/fonts/recoleta/Recoleta Medium.otf",
                  "weight": 500,
                  "style": "normal"
                },
                {
                  "path": "./assets/fonts/recoleta/Recoleta SemiBold.otf",
                  "weight": 600,
                  "style": "normal"
                },
                {
                  "path": "./assets/fonts/recoleta/Recoleta Bold.otf",
                  "weight": 700,
                  "style": "normal"
                }
              ]
            }
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "346f3759-6dc9-4ac6-9978-45511f8433fb"
      }
    }
  }
}
